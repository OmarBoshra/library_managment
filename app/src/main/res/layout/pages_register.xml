<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >


    <TextView

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Sign in"

        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />



        <EditText

            android:id="@+id/user_name"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:hint="Name"

            android:padding="4dp"
            android:textColorHint="@color/graybrown"

            android:textSize="20dp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkrgraybrown"

            android:text="Select user type"

            android:textColor="@color/colorAccent"

            android:gravity="center"
            android:padding="4dp"

            android:textColorHint="@color/graybrown"

            android:textSize="20dp" />




            <RadioGroup

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"


                >

            <RadioButton

                android:id="@+id/choice_Student"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Student"



                />

            <RadioButton
                android:id="@+id/choice_Librarian"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Librarian"

                />

            <RadioButton
                android:id="@+id/choice_FacultyStaff"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="Faculty staff"

                />
            </RadioGroup>

    <EditText
        android:id="@+id/email"

        style="@style/Widget.AppCompat.EditText"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:hint="E-mail"
        android:inputType="textWebEmailAddress"

        android:padding="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"

        android:textColor="@color/darkrgraybrown"

        android:textColorHint="@color/graybrown"

        android:textSize="20dp"
        android:textStyle="italic" />

    <EditText

        android:id="@+id/password"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:hint="password"

        android:inputType="textVisiblePassword"

        android:padding="4dp"


        android:textColor="@color/darkrgraybrown"

        android:textColorHighlight="@android:color/holo_red_light"
        android:textColorHint="@color/graybrown"
        android:textSize="20dp"


        android:textStyle="italic"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.28dp"
        android:background="@android:color/black"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorPrimary"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1.28dp"
            android:background="@android:color/black"></View>

        <Button


            android:id="@+id/register"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/colorPrimaryDark"

            android:gravity="center"
            android:text="Register"

            android:textAllCaps="false"

            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
            android:textColor="@color/colorAccent"
            android:typeface="serif"

            />

        <Button

            android:id="@+id/Sc"


            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:gravity="center"

            android:text="Save Changes"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
            android:textColor="@android:color/black"
            android:typeface="serif"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>
