<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:padding="15dp"
    android:background="@drawable/shape"

    >
<!--filter by or details-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:id="@+id/sdt"
        android:padding="8dp"


        android:text="Book details"
        />

    <TextView
        android:id="@+id/bookDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:choiceMode="multipleChoice"

        android:layout_weight="1"

        android:textColor="@color/colorPrimaryDark"


        android:textAllCaps="false" />



    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/languages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:entries="@array/lang"

        android:padding="8dp"

      />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/formats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:entries="@array/format"

        android:padding="8dp"

        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/publications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:entries="@array/publication"

        android:padding="8dp"

        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/editions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:entries="@array/edition"
        android:padding="8dp"


        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:entries="@array/category"
        android:padding="8dp"

        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/authors"
android:padding="8dp"

        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/copies"

        android:padding="8dp"

        />

        <Button
            android:id="@+id/borrowOrReturnBook"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Submit"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="4dp"

            android:layout_margin="4dp"



            android:textColor="@color/colorAccent"


            />


</LinearLayout>